<html>
  <head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="theme-color" content="#8C43FF">
   <title><%= coursepage.title %></title>
    <meta property="og:title" content="<%= coursepage.title %>" /> 
    <!-- styles -->
   <base href="/">
<link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
        crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Kanit" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body>
    <div style="background:url('<%= coursepage.hero_image %>');margin-top:0'margin-right:0" class="heading"><h1><%= coursepage.hero_title %></h1></div>
    <div class=" tutorial_hidden" style="display:none"><%= coursepage.tutorial %></div>
     <div class="tutorial_visible main" id="body"></div>
    <script>       
       let tutorial = document.createElement('div');
       tutorial.innerHTML =   document.querySelector('.tutorial_hidden').textContent;
       console.log(tutorial);
       document.querySelector('.tutorial_visible').appendChild(tutorial);

    </script>
     <style>

                                           .heading {
                                             background-position: center;
                                             background-size: cover;
                                             background-repeat: no-repeat;
                                             min-height: 60vh;
                                             color: white;
                                           }

                                           .heading h1{
                                             text-align:center;
                                             padding-top: 20vh;
                                           }
                                            .main {
                                                margin-top: 100px;
                                            }

                                            #body {
                                                margin-bottom: 100px;
                                                font-family:'kanit',Arial,sans-serif;color:##292929;font-size:1.1em
                                            }

                                            pre code {
                                              background: #444444;
                                              color: white;
                                              min-height: 100px;
                                              min-width: 60vw;
                                              padding-top: 1.2em;
                                              padding-bottom: 80px;
                                              padding-left: 20px;
                                              padding-right: 40vw;
                                            }

                                            p, h2,h3,h1,figcaption,li{
                                              margin: 12px auto;
                                                max-width: 60vw;
                                            }
                                            @media screen and (max-width:800px) {

                                              body {
                                                padding: 0 0;
                                                margin: 0 0;
                                                width: 100vw;
                                              }

                                              #body p img {
                                                height: 25vh;
                                                width: auto;
                                              }

                                              p, h2,h3,h1,figcaption,li{
                                                padding-left: 2px;
                                                max-width: 80vw;
                                            }

                                              #body {
                                                  min-width: 100%;
                                              }                                               
                                            }

                                             @media screen and (max-width:500px) {

                                              #body {
                                                  min-width: 100vw;
                                              }  
                                              .heading {
                                                width: 100vw;
                                              } 

                                              img {
                                                width: 100%;
                                              }                                            
                                            }
     
  </body>
</html>